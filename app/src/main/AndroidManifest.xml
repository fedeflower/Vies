<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vies.uniba.it.vies">
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.NewAlbumActivity"
            android:label="@string/nuovo_album"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_main2"
            android:theme="@style/AppTheme"
            android:noHistory="true" />
        <activity android:name=".activity.GalleryActivity" >
        </activity>
        <activity
            android:name=".activity.DetailPhotoActivity"
            android:label="TempLabel" >
    </activity>
        <activity
            android:name=".activity.TabAnimationActivity"
            android:configChanges="orientation|screenSize"
            android:label="Vies" />
        <activity
            android:name=".activity.TabsHeaderActivity"
            android:label="Vies"
            android:theme="@style/MyTheme.Detail" />
    </application>

</manifest>
