<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.suleiman.material.activities.LaunchScreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/launch_bg"
        android:alpha="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView

            android:layout_width="300px"
            android:layout_height="302px"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/vies_logo_medio" />

        <TextView
            style="@style/TextAppearance.AppCompat.Display1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="VIES"
            android:textColor="@android:color/primary_text_dark"
            android:textStyle="bold" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Viaggia e Scatta"
            android:textSize="14dp"
            android:textColor="@android:color/primary_text_dark" />

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:textSize="10dp"
            android:text="Progetto IUM - 2015/2016"
            android:textColor="@android:color/primary_text_dark" />
    </LinearLayout>


</FrameLayout>
