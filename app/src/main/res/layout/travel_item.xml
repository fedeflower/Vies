<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/favThumbnail"
        android:layout_alignParentTop="true"
        android:layout_width="@dimen/thumbnail"
        android:layout_height="@dimen/thumbnail"
        android:layout_marginRight="@dimen/thumbnailMarginRight"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/photoCounter"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/photoCounter"
        android:layout_height="@dimen/photoCounter"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textSize="@dimen/photoCounterTextSize"
        android:textStyle="bold"
        android:text="73"/>

    <LinearLayout
        android:id="@+id/travelSummaryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/favThumbnail"
        android:layout_toLeftOf="@+id/photoCounter"
        android:orientation="vertical"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading2"
        android:text="First time in London" />
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="22/03/2016 - 29/03/2016" />
    <TextView
        android:id="@+id/locationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Londra" />

    </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>